<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Projet_5.Web</title>
    <script type="importmap"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Projet_5.Web.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container" style="max-width: 1320px;">
                <a class="navbar-brand" href="/" style="color: #2C1810; font-weight: bold;">ExpressVoitures</a>
                <div class="collapse navbar-collapse justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Accueil</a>
                        </li>
						@if (User.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
						{                        
                            <li class="nav-item">
                                <a asp-area="Admin" asp-controller="CarForSale" asp-action="Create" class="nav-link">Ajouter une voiture</a>
                            </li>
						}
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <form asp-area="Identity" asp-page="/Account/Logout" method="post" id="logoutForm" class="d-inline">
                                    <button type="submit" class="nav-link">Se déconnecter</button>
                                </form>
						    </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a asp-area="Identity" asp-page="/Account/Login" class="nav-link">Se connecter</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
	
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Express Voiture
        </div>
	</footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
